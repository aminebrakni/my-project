<div class="card mb-4">
	{% if property.filename %}
		<img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="" style="width:100%; height:230px; ">
	{% else %}
		<img src="{{ '/images/properties/300x250.png' | imagine_filter('thumb') }}" alt="" style="width:100%; height:230px; ">
	{% endif %}

	<div class="card-body">
		<h5 class="card-title">
			<a href="{{ path('property.show', {slug: property.slug, id: property.id }) }}">{{ property.title }}</a>
		</h5>
		<p class="card-text">
			{{ property.surface }} - m² {{ property.city }} ({{ property.postalCode }})
		</p>
		<div class="text-primary">
			{{ property.formattedPrice }} €
		</div>
	</div>
</div>